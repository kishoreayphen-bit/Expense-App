{
  "expo": {
    "name": "ExpenseApp",
    "slug": "expense-app",
    "version": "1.0.0",
    "scheme": "expenseapp",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "androidStatusBar": {
      "backgroundColor": "#4CAF50"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan receipts and autofill expense details."
      }
    },
    "android": {
      "package": "com.expenseapp.mobile",
      "versionCode": 1,
      "permissions": [
        "CAMERA"
      ],
      "softwareKeyboardLayoutMode": "pan"
    },
    "web": {
      "bundler": "metro",
      "output": "single"
    },
    "extra": {
      "eas": {
        "projectId": "94c49d4b-ebf7-4924-8b75-614ed1bbc0e4"
      }
    }
  }
}
